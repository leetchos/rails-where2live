<hr class="hr-1">
<div class="container">
  <h1>What people say about <%= @neighborhood.name %></h1>

  <hr class="hr-2 mb-4">

  <ul class="list-group list-group-flush">
    <li class="fas fa-shopping-cart icon-reviews"><span class="list-reviews"> Market</span></li>
    <li class="fas fa-stethoscope icon-reviews"><span class="list-reviews"> Hospital</span></li>
    <li class="fas fa-dumbbell icon-reviews"><span class="list-reviews"> Gym</span></li>
    <li class="fas fa-bicycle icon-reviews"><span class="list-reviews"> Mobility</span></li>
    <li class="fas fa-utensils icon-reviews"><span class="list-reviews"> Restaurant</span></li>
    <li class="fas fa-graduation-cap icon-reviews"><span class="list-reviews"> School</span></li>
  </ul>

  <hr class="hr-2 mb-4">

  <ul class="list-group list-group-flush">
    <%= link_to chat_neighborhood_path(@neighborhood) do %>
    <li class="far fa-comment-alt list-chat"><span class="list-message"> Join the chat now!</span></li>
    <% end  %>
  </ul>

  <hr class="hr-2 mb-4">

</div>

<%= render 'shared/navbar' %>
